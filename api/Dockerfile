# Build stage
FROM golang:latest as builder
WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o api .




# Final stage
FROM alpine:latest
RUN apk update && apk add --no-cache 
WORKDIR /root/
COPY --from=builder /app/api .


EXPOSE 8080
CMD ["sh", "-c", "./api"]
